      <target>
        <code value="bad"/>
        <display value="Bad"/>
        <equivalence value="narrower" />
        <comment value="Age is not implied in CDA value" />
      </target> 
    </element>
    <element>
      <code value="mobile"/>
      <display value="Mobile"/>
      <target>
        <code value="MC"/>
